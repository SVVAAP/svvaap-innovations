// │   ├── Home.js          # Feed page
// │   ├── Profile.js       # User profile page
// │   ├── Explore.js       # Explore page for new ideas
// │   └── Notifications.js # Notifications page
// ├── firebase/
// │   └── firebaseConfig.js
// ├── utils/
// │   └── api.js           # API integrations with PHP backend
